{
  "openapi": "3.0.0",
  "info": {
    "title": "Page API",
    "version": "1.0.0",
    "description": "Page_Api oferece recursos para o usuário se autenticar e se cadastrar. Quando autenticado, será possível fazer transações de 'cash-in' e 'cash-out'."
  },
  "paths": {
    "/sign-in": {
      "post": {
        "summary": "Autenticação",
        "description": "Autenticação de usuário.",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json" : {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "example": {
                "email": "test@test.com",
                "password" : "123456"
              }
            }
          }
        },
        "responses" : {
          "200": {
            "description": "Autenticação efetuada com sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "token": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9......"
                }
              }
            }
          },
          "404":{
            "description": "Usuário não está cadastrado no banco de dados.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "User not found"
                }
              }
            }
          },
          "401":{
            "description": "A senha está incorreta.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "Password does not match"
                }
              }
            }
          }
        }
      }
    },
    "/register": {
      "post": {
        "summary": "Cadastro",
        "description": "Cadastro de usuário.",
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              },
              "example": {
                "name": "jonathan",
                "lastName": "Silva",
                "email": "test@test.com",
                "password":"123456"
              }
            }
          }
        },
        "responses":{
          "201": {
            "description": "Cadastro de usuário efetuado com sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "User created successfully"
                }
              }
            }
          },
          "409":{
            "description": "Usuário já esta cadastrado no banco de dados.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "string",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "User already registered"
                }
              }
            }
          }
        }
      }
    },
    "/transaction": {
      "get": {
        "summary": "Transações",
        "description": "Com base na autenticação, será possível visualizar as transações do usuário autenticado.",
        "tags": [
          "Transaction"
        ],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "required": true,
            "schema": {
              "properties": {
                "authorization": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully connected",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "id": 1,
                  "name": "John",
                  "lastName": "Doe",
                  "email": "test@test.com",
                  "createdAt": "2023-07-10",
                  "transactions": [
                    {
                      "id": 1,
                      "userId": 1,
                      "amount": 100.00,
                      "description": "Smartband XYZ 3.0",
                      "paymentMethod": "debit_card",
                      "cardNumber": 4569,
                      "cardHolderName": "John Doe",
                      "cardExpirationDate": "2021-12",
                      "cardCvv": 123,
                      "createdAt": "2023-07-10",
                      "payable": {
                        "transactionId": 1,
                        "status": "paid",
                        "paymentDate": "2023-07-10",
                        "amount": 97.00
                      }
                    },
                    {
                      "id": 2,
                      "userId": 1,
                      "amount": 100,
                      "description": "Smartband XYZ 3.0",
                      "paymentMethod": "credit_card",
                      "cardNumber": 4569,
                      "cardHolderName": "John Doe",
                      "cardExpirationDate": "2021-12",
                      "cardCvv": 123,
                      "createdAt": "2023-07-10",
                      "payable": {
                        "transactionId": 2,
                        "status": "waiting_funds",
                        "paymentDate": "2023-08-09",
                        "amount": 95
                      }
                    }
                  ]
                }
              }
            }
          },
          "401":{
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "401|Unauthorized"
                }
              }
            }
          },
          "404":{
            "description": "Token not found",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "404|Token not found"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Transações",
        "description": "Com base na autenticação, será possível fazer novas transações.",
        "tags": [
          "Transaction"
        ],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "required": true,
            "schema": {
              "properties": {
                "authorization": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              },
              "example": {
                "amount": 100.00,
                "description": "Smartband XYZ 3.0",
                "paymentMethod": "debit_card",
                "cardNumber": 1234567891234569,
                "cardHolderName": "John Doe",
                "cardExpirationDate": "2021-12",
                "cardCvv": 123
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transação criada com sucesso",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "Transaction created successfully"
                }
              }
            }
          },
          "401":{
            "description": "Unauthorized",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      }
    },
    "/payable": {
      "get": {
        "summary": "Recebíveis",
        "description": "Recebíveis de transações, os valores de retorno são com base no método de pagamento, havendo taxa de 3% para transações realizadas por cartão de débito e 5% para cartões de crédito.",
        "tags": [
          "Payable"
        ],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "required": true,
            "schema": {
              "properties": {
                "authorization": {
                  "type": "string"
                }
              }
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": {
              "properties": {
                "status": {
                  "type": "string"
                }
              }
            },
            "example": "paid or waiting_funds"
          }
        ],
        "responses": {
          "200": {
            "description": "A soma dos recebíveis foi resgatada com sucesso.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "Balance successfully.",
                  "status": "paid",
                  "balance": "$122846.62"
                }       
              }
            }  
          },
          "401": {
            "description": "O usuário não está cadastrado no banco de dados ou o token está incorreto.",
            "content":{
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                  "message": {
                    "type": "string"
                    } 
                  }
                },
                "example": {
                  "message": "Unauthorized"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Register": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Transaction" : {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number"
          },
          "description": {
            "type": "string"
          },
          "paymentMethod": {
            "type": "string"
          },
          "cardNumber": {
            "type": "number"
          },
          "cardHolderName": {
            "type": "string"
          },
          "cardExpirationDate": {
            "type": "string"
          },
          "cardCvv": {
            "type": "number"
          }
        }
      }
    },

    "securitySchemes":{
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}